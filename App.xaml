<Application x:Class="Cloud_Backup_Core.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:Cloud_Backup_Core"
             StartupUri="MainWindow.xaml">
    <Application.Resources>
		<!-- Status Bar	Background	#D6BD98	-->
		<!-- Status Bar	Foreground	#2C3930	-->
		<!-- Label		Background	#DCD7C9	-->
		<!-- Window		Background	#DCD7C9	-->
		<!-- Button		Background	#677D6A	-->
		<!-- Button		Foreground	#DCD7C9	-->
		<!-- Button		BorderBrush	#D6BD98	-->
		
		<Style TargetType="Button" x:Key="StyledButton">
			<Setter Property="Background" Value="#677D6A"/>
			<Setter Property="Foreground" Value="#DCD7C9"/>
			<Setter Property="FontSize" Value="14"/>
			<Setter Property="Padding" Value="10"/>
			<Setter Property="BorderThickness" Value="1"/>
			<Setter Property="BorderBrush" Value="#D6BD98"/>
			<Setter Property="Cursor" Value="Hand" />
			<Setter Property="Template">
				<Setter.Value>
					<ControlTemplate TargetType="Button">
						<Border Background="{TemplateBinding Background}" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}" 
                                CornerRadius="10">
							<ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
						</Border>
						<ControlTemplate.Triggers>
							<Trigger Property="IsMouseOver" Value="True">
								<Setter Property="Background" Value="#1A3636"/>
							</Trigger>
							<Trigger Property="IsPressed" Value="True">
								<Setter Property="Background" Value="#2C3930"/>
								<Setter Property="Foreground" Value="#D6BD98"/>
								<Setter Property="FontWeight" Value="Bold" />
							</Trigger>
						</ControlTemplate.Triggers>
					</ControlTemplate>
				</Setter.Value>
			</Setter>
		</Style>
	</Application.Resources>
</Application>
