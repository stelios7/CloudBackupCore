<Window x:Class="Cloud_Backup_Core.Views.SettingsWindowView"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Cloud_Backup_Core.Views"
        mc:Ignorable="d"
        Title="Ρυθμίσεις" Height="230" Width="350"
		WindowStartupLocation="CenterScreen"
		WindowStyle="ToolWindow"
		ResizeMode="NoResize"
		Background="#DCD7C9"
		>
	<Grid>
		<DockPanel LastChildFill="True" Margin="10">
			<StackPanel Orientation="Vertical" DockPanel.Dock="Left">
				<ItemsControl ItemsSource="{Binding UploadSettings}">
					<ItemsControl.ItemTemplate>
						<DataTemplate>
							<local:uc_SettingsItem DataContext="{Binding}"/>
						</DataTemplate>
					</ItemsControl.ItemTemplate>
				</ItemsControl>
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

					<Label Content="ΑΦΜ: " Foreground="#2C3930"/>
					<Border Width="150" CornerRadius="5" BorderBrush="#D6BD98" BorderThickness="1" Margin="2"
					Background="White">
						<StackPanel Orientation="Horizontal">
							<TextBox FontSize="12"
						 Height="auto" VerticalAlignment="Center"
						 VerticalContentAlignment="Center" 
									 HorizontalContentAlignment="Center"
                         Foreground="#677D6A" 
						 Background="Transparent"
                         BorderThickness="0" Padding="0" 
									 Width="150"
						 Text="{Binding SoftwareName, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
						 />
						</StackPanel>
					</Border>
				</StackPanel>
				<StackPanel Orientation="Horizontal" HorizontalAlignment="Center">

					<!--<Button Content="Save" Margin="10" Width="100" Command="{Binding SaveCommand}"/>-->
					<Button Content="Save" Margin="10" Width="100" Height="30" Command="{Binding SaveCommand}" 
							Style="{StaticResource StyledButton}"
							>
					</Button>
				</StackPanel>
			</StackPanel>
		</DockPanel>
	</Grid>
</Window>
