<UserControl x:Class="Cloud_Backup_Core.Views.uc_SettingsItem"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             mc:Ignorable="d"
             Height="25" Width="310"
			 
			 >
	<!-- Status Bar	Background				#D6BD98	-->
	<!-- Status Bar	Foreground				#2C3930	-->
	<!-- Label		Background				#DCD7C9	-->
	<!-- Window		Background				#DCD7C9	-->
	<!-- Button		Background	Solid Green	#677D6A	-->
	<!-- Button		Foreground	Light Beige	#DCD7C9	-->
	<!-- Button		BorderBrush				#D6BD98	-->

	<Border CornerRadius="2" Padding="0" BorderBrush="#D6BD98" BorderThickness="0">
		<DockPanel LastChildFill="False" VerticalAlignment="Center">
			<!-- Checkbox -->
			<CheckBox x:Name="EnableCheckbox" Content="{Binding SoftwareName, UpdateSourceTrigger=PropertyChanged}"
					  VerticalContentAlignment="Center"
					  DockPanel.Dock="Left" Margin="0" Width="80" FontSize="14"
                      VerticalAlignment="Center" 
					  IsChecked="{Binding UploadEnabled}"
					  Foreground="#677D6A"
				/>

			<!-- TextBox -->
			<Border Width="220" CornerRadius="5" BorderBrush="#D6BD98" BorderThickness="1" Margin="2"
					Background="White">
				<TextBox x:Name="PathTextBox" IsEnabled="{Binding IsChecked, ElementName=EnableCheckbox}" FontSize="9"
						 Height="30" VerticalAlignment="Center"
						 VerticalContentAlignment="Center" 
                         Foreground="#677D6A" 
						 Background="Transparent"
                         BorderThickness="0" Padding="0" 
						 Text="{Binding LocalPath, UpdateSourceTrigger=PropertyChanged, Mode=TwoWay}"
						 />
			</Border>
		</DockPanel>
	</Border>

</UserControl>
